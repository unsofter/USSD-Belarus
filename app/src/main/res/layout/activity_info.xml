            android:text="@string/info_fonddobro" />

        <TextView
            android:id="@+id/info_header_rate"
            style="@style/info_textview_style"
            android:textAlignment="center"
            android:onClick="onRateClick"
            android:text="@string/info_rating" />

    </LinearLayout>
