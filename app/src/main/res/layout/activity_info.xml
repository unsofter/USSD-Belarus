            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp"
            android:text="@string/info_header" />
        <TextView
            android:id="@+id/info_header_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="18sp"
            android:text="@string/info_header_next" />

        <TextView
            android:id="@+id/info_header_velcom"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_velcom" />
        <TextView
            android:id="@+id/info_header_mts"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_mts" />
        <TextView
            android:id="@+id/info_header_life"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_life" />

        <TextView
            android:id="@+id/info_header_parking"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_parking" />

        <TextView
            android:id="@+id/info_header_minsktrans"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_minsktrans" />

        <TextView
            android:id="@+id/info_header_7788"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_7788" />

        <TextView
            android:id="@+id/info_header_belinvestbank"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_belinvestbank" />
        <TextView
            android:id="@+id/info_header_vtb"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_vtb" />
        <TextView
            android:id="@+id/info_header_belgazprom"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_belgazprombank" />
