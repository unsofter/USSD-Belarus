        <TextView
            android:id="@+id/info_header_priormobile"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_priormobile" />
        <TextView
            android:id="@+id/info_header_bps"
            style="@style/info_textview_style"
            android:onClick="onClick"
            android:text="@string/info_bps" />

        <TextView
            android:id="@+id/info_header_ideabank"
